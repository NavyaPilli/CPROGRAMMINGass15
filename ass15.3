// a program to print maximum and minimum  and their difference number from the array
#include<stdio.h>
main()
{
	int i,n,max=0,min=0;
	scanf("%d",&n);
	int a[n];
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
		
	}
	max=a[0];
	min=a[0];
	for(i=0;i<n;i++)
	{
		if(max<a[i])
		max=a[i];
		if(min>a[i])
		min=a[i];
	}
	printf("%d  %d",max,min);
	printf("\n%d",max-min);
}
